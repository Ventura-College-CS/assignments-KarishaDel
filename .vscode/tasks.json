    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "TDM-GCC g++.exe build active file 5",
            "command": "C:\\TDM-GCC-64\\bin\\g++.exe",
            "args": [
              "-g",
              "${file}",
              "-o",
              "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "options": {
              "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [
              "$gcc"
            ],
            "group": "build"
          },
      
    ]
}